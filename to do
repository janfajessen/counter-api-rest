 //listener for reset
    document.querySelector('header .reset').addEventListener('click', () => {
        // decrement counter to 0


        fetch(baseApiUrl + '/reset')
            .then(res => res.json())
            .then(data => {
                updateCounterDOM(data.counterValue)
            })

    })



